<resources>
    <style name="gpa_input_box">
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/gpa_input_box</item>
        <item name="android:layout_margin">4dp</item>
    </style>
    <style name="gpa_text">
        <item name="android:layout_width">97dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">@string/course_name</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="gpa_input">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:hint">@string/grade_input</item>
        <item name="android:background">@null</item>
    </style>
    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="remove">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@drawable/ic_remove</item>
    </style>
</resources>